<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h3>Poll List </h3>
                <hr>
                <a href="/polldb/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Poll</a>
                <hr>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Template Row -->
                    <% for (let count = 0; count < polldb.length; count++) { %>
                        <tr>
                            <td class="text-center">
                                <%= polldb[count].question %>
                            </td>
                            <td class="text-center">
                                <a href="/pollview/<%= polldb[count]._id %>" class="btn btn-primary">
                                    <i class="fa fa-pencil-square-o"></i> Respond</a>
                            </td>
                        </tr>
                        <% } %>
                </table>
            </div>
        </div>
    </div>

    <% include ../partials/footer.ejs %>