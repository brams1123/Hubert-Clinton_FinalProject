    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h3>Reports</h3>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Template Row -->
                    <% for (let count = 0; count < polldb.length; count++) { %>
                        <tr>
                            <td class="text-center">
                                <%= polldb[count].question %>
                            </td>
                            <td class="text-center">
                                <%= polldb[count].option %>
                            </td>
                        </tr>
                        <% } %>
                </table>
            </div>
        </div>
    </div>

